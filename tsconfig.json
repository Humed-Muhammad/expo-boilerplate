{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["src/app/*"],
      "assets/*": ["src/assets/*"],
      "locals/*": ["src/locals/*"],
      "navigation/*": ["src/navigation/*"],
      "styles/*": ["src/styles/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"],
      "components/*":["src/components/*"]
    }
  },
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "noEmit": true,
      "allowSyntheticDefaultImports": true
    }
  }
}
